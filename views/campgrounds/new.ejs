<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="post">
                <h1>New Campground</h1>
                <div class=mb-3>
                    <label class=form-label for="title">Title: </label>
                    <input class=form-control type="text" name="campground[title]" id="title">
                </div>
                <div class=mb-3>
                    <label class=form-label for="location">Location: </label>
                    <input class=form-control type="text" name="campground[location]" id="location">
                </div>
                <div class=mb-3>
                    <label class=form-label for="image">Image Url: </label>
                    <input class=form-control type="text" name="campground[image]" id="location">
                </div>
                <div class="mb-3">
                    <label class=form-label for="image">Price: </label>
                    <div class=input-group>
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" id=price name="campground[price]" aria-label="price">
                        <span class="input-group-text">.00</span>
                    </div>
                </div>
                <div class=mb-3>
                    <label class=form-label for="description">Description: </label>
                    <textarea class=form-control type="text" name="campground[description]" id="location"></textarea>
                </div>
                <input class="btn btn-success"type=submit>
                <a class="btn btn-secondary"  href="/campgrounds">All campgrounds</a>
            </form>
        </div>
    </div>